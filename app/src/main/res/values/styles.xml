<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorTheme</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorTheme</item>
        <item name="actionBarTheme">@style/MyActionbar</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="RowsStyle">
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="ButtonDifficultyStyle">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorAccent</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:height">60dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MyActionbar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/colorTheme</item>
    </style>

</resources>
