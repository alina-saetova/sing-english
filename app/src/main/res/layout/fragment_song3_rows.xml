<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="ru.itis.sing_english.presentation.viewmodel.SongViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.view.ui.Song5RowsFragment"
        android:orientation="vertical">

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/youtube_player_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:showFullScreenButton="false"
            app:showSeekBar="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/youtube_player_view"
            app:layout_constraintVertical_bias="0.332">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/llRow1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/RowsStyle">

                    <TextView
                        android:id="@+id/tv_first1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{viewModel.row1.first}"
                        android:textAlignment="textEnd" />

                    <TextView
                        android:id="@+id/tv_word1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@{viewModel.row1.word}"
                        android:textAlignment="center"
                        android:textColor="#00796B"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_second1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{viewModel.row1.second}"
                        android:textAlignment="viewStart" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llRow2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/RowsStyle">

                    <TextView
                        android:id="@+id/tv_first2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{viewModel.row2.first}"
                        android:textAlignment="textEnd" />

                    <TextView
                        android:id="@+id/tv_word2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@{viewModel.row2.word}"
                        android:textAlignment="center"
                        android:textColor="#00796B"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_second2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{viewModel.row2.second}"
                        android:textAlignment="viewStart" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llRow3"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/RowsStyle">

                    <TextView
                        android:id="@+id/tv_first3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{viewModel.row3.first}"
                        android:textAlignment="textEnd" />

                    <TextView
                        android:id="@+id/tv_word3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@{viewModel.row3.word}"
                        android:textAlignment="center"
                        android:textColor="#00796B"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_second3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{viewModel.row3.second}"
                        android:textAlignment="viewStart" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_buttons"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_weight="0"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_first"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        style="@style/ButtonStyle"
                        android:text="@{viewModel.option1}"
                        android:onClick="@{ (view) -> viewModel.answer(view) }"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_third"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        style="@style/ButtonStyle"
                        android:text="@{viewModel.option3}"
                        android:onClick="@{ (view) -> viewModel.answer(view) }"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_second"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        style="@style/ButtonStyle"
                        android:layout_marginBottom="10dp"
                        android:text="@{viewModel.option2}"
                        android:onClick="@{ (view) -> viewModel.answer(view) }"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_fourth"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        style="@style/ButtonStyle"
                        android:text="@{viewModel.option4}"
                        android:onClick="@{ (view) -> viewModel.answer(view) }"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
