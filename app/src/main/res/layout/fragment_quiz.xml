<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="quizViewModel"
            type="ru.itis.sing_english.viewmodel.QuizViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.QuizFragment">

        <Button
            android:id="@+id/btn_first"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="@{quizViewModel.firstOption.word.translation}"
            android:onClick="@{ (view) -> quizViewModel.answer(view) }"
            btnColor="@{quizViewModel.firstOption.state}"
            android:clickable="@{quizViewModel.clickable}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_word" />

        <Button
            android:id="@+id/btn_second"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@{quizViewModel.secondOption.word.translation}"
            android:onClick="@{ (view) -> quizViewModel.answer(view) }"
            btnColor="@{quizViewModel.secondOption.state}"
            android:clickable="@{quizViewModel.clickable}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_first" />

        <Button
            android:id="@+id/btn_third"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="@{quizViewModel.thirdOption.word.translation}"
            android:onClick="@{ (view) -> quizViewModel.answer(view) }"
            btnColor="@{quizViewModel.thirdOption.state}"
            android:clickable="@{quizViewModel.clickable}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_second" />

        <Button
            android:id="@+id/btn_fourth"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@{quizViewModel.fourthOption.word.translation}"
            android:onClick="@{ (view) -> quizViewModel.answer(view) }"
            btnColor="@{quizViewModel.fourthOption.state}"
            android:clickable="@{quizViewModel.clickable}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_third" />

        <TextView
            android:id="@+id/tv_word"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@{quizViewModel.currentWord.word.text}"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ib_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.958"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_cancel"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
