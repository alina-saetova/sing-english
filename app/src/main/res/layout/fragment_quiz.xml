<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="quizViewModel"
            type="ru.itis.sing_english.presentation.viewmodel.QuizViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.view.ui.QuizFragment">

        <TextView
            android:id="@+id/tv_word"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="protect"
            android:textSize="20sp"
            android:layout_marginTop="60dp"
            android:text="@{quizViewModel.currentWord.word.text}"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_first"
            style="@style/ButtonStyle"
            btnColor="@{quizViewModel.firstOption.state}"
            tools:text="защищать"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:clickable="@{quizViewModel.clickable}"
            android:onClick="@{ (view) -> quizViewModel.answer(view) }"
            android:text="@{quizViewModel.firstOption.word.translation}"
            app:layout_constraintTop_toBottomOf="@+id/tv_word" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_second"
            style="@style/ButtonStyle"
            btnColor="@{quizViewModel.secondOption.state}"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:clickable="@{quizViewModel.clickable}"
            android:onClick="@{ (view) -> quizViewModel.answer(view) }"
            android:text="@{quizViewModel.secondOption.word.translation}"
            app:layout_constraintTop_toBottomOf="@+id/btn_first" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_third"
            style="@style/ButtonStyle"
            btnColor="@{quizViewModel.thirdOption.state}"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:clickable="@{quizViewModel.clickable}"
            android:onClick="@{ (view) -> quizViewModel.answer(view) }"
            android:text="@{quizViewModel.thirdOption.word.translation}" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_fourth"
            style="@style/ButtonStyle"
            btnColor="@{quizViewModel.fourthOption.state}"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:clickable="@{quizViewModel.clickable}"
            android:onClick="@{ (view) -> quizViewModel.answer(view) }"
            android:text="@{quizViewModel.fourthOption.word.translation}" />

    </LinearLayout>
</layout>
